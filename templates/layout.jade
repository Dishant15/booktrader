doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
		block css

		//- React javascripts
		script(src="https://cdnjs.cloudflare.com/ajax/libs/react/15.0.2/react.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/react/15.0.2/react-dom.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js")
		//- tether for tooltips
		script(src='/stylesheets/style.css')
		//- Link to jquery
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")


	body
		.container
			include navbar
			//- flash msg parsing service
			if success_msg.length
				div.alert.alert-success.alert-dismissible(role="alert")
					button.close(type='button', data-dismiss='alert', aria-label='Close')
						span(aria-hidden='true') ×
					| #{success_msg}

			if error_msg.length
				div.alert.alert-danger.alert-dismissible(role="alert")
					button.close(type='button', data-dismiss='alert', aria-label='Close')
						span(aria-hidden='true') ×
					| #{error_msg}

			if error.length
				div.alert.alert-warning.alert-dismissible(role="alert")
					button.close(type='button', data-dismiss='alert', aria-label='Close')
						span(aria-hidden='true') ×
					| #{error}

			.content
				block content

		//- Link to bootstrap js
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js",integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin="anonymous")
		block scripts